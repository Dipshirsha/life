  <link rel="stylesheet" href="style.css">
  <style>
    th {
      width: 70%;
      font: 1em sans-serif;
      color: aliceblue;
    }
    body{
      background-image: url("https://4kwallpapers.com/images/walls/thumbs_3t/8324.png");
      backdrop-filter: blur(3px);
    }
    tr{
      border: 3px solid rgba(214, 211, 211, 0.366);
    }
    button{
      background-color: rgba(108, 155, 208, 0.475);
    }
    button:hover{
      background-color: rgba(244, 244, 244, 0.475);
    }
@media all and (max-width: 450px) {
.email{
  display: none;
}
th{
  width: 200%;
}
}
  </style>
  <title>Student Manegement</title>
</head>

<body>

<h1  style="text-align: center;font-family:cursive;color: aqua;">Member  meeting attendence stylesheet</h1>
<br>
<br>

  <% for ( i=0;i<locals.countdata;i++ ) { %>
    <table>
      <thead>
        <tr>

          <th>
            <%= locals.userchange[i].name %>
          </th>
          <th class="email">
            <%= locals.userchange[i].email %>
          </th>
          <th>
            <form action="/attendence/post" method="post">
              <%if(i<locals.countdata){%>
                
                <button class="form-submit" type="checkbox" name="attend" value="<%= locals.userchange[i].email%>">Present</button>
                <%}%>
           
  
               
                   
                        
            </form>
          </th>
        </tr>
      </thead>

    </table>
    <%}%>
   <form action="/attendence/serve" method="post"> <button class="form-submit" type="submit" name="noclass" value="v>">Submit</button></form>
   
